{
  "expo": {
    "name": "here",
    "slug": "here",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/here-icon.png",
    "scheme": "here",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": ["**/*"],
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.here",
      "infoPlist": {
        "NSCameraUsageDescription": "앱에서 사진을 찍기 위해 카메라 접근이 필요합니다.",
        "NSPhotoLibraryUsageDescription": "갤러리 접근을 위해 사진 라이브러리 접근 권한이 필요합니다."
      }
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "package": "com.anonymous.here",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "이 앱이 카메라를 사용할 수 있도록 허용해주세요.",
          "microphonePermission": "이 앱이 마이크를 사용할 수 있도록 허용해주세요.",
          "recordAudioAndroid": true
        }
      ],
      "expo-font"
      
    ],
    "experiments": {
      "typedRoutes": false
    }
  }
}
