{
  "expo": {
    "name": "이건여기",
    "slug": "here",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/here-icon.png",
    "scheme": "here",
    "userInterfaceStyle": "automatic",
    "assetBundlePatterns": [
      "**/*"
    ],
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.teamhere.here",
      "buildNumber": "10",
      "infoPlist": {
        "NSCameraUsageDescription": "이 앱은 AI의 분리배출 방법 안내 제공을 위해 쓰레기 사진 촬영 시 카메라 권한이 필요합니다.",
        "CFBundleDisplayName": "이건여기"
      }
    },
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "package": "com.teamhere.here",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/here-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "이 앱은 AI의 분리배출 방법 안내 제공을 위해 쓰레기 사진 촬영 시 카메라 권한이 필요합니다.",
          "recordAudioAndroid": true
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": false
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4f241064-d294-4b51-a4d7-b81c681e2776"
      }
    }
  }
}
